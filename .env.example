# Database Configuration
PRIMARY_DB_URL=jdbc:postgresql://localhost:5432/crypto_blog
PRIMARY_DB_USER=postgres
Primary_DB_PASSWORD=your_postgres_password

# Hibernate Configuration
HIBERNATE_DDL=update
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Server Configuration
PORT=8080
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_EXPIRATION_TIME=86400000

# Email Configuration (SMTP - if using alternative to Mailgun)
SMTP_HOST=smtp.gmail.com
EMAIL_PORT=587
DEFAULT_FROM_EMAIL=noreply@cryptoblog.com
EMAIL_PASSWORD=your_email_password

# Mailgun Configuration (Primary email service)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=sandboxXXXXXXXXX.mailgun.org